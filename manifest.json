{
    "manifest_version": 3,
    "name": "Veracross Person Launcher",
    "description": "This small extension allows you to quickly open a person record in Axiom simply by entering the Veracross Person ID.",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Veracross Person Launcher"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "commands": {
        "finder-quick-launch": {
            "default": "Alt+V",
            "suggested_key": "Alt+V",
            "description": "Quickly opens the launcher popup."
        }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "icons/1icon16.png",
        "48": "icons/1icon48.png",
        "128": "icons/1icon128.png"
    }
}